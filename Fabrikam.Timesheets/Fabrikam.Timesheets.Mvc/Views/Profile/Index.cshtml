@using System.Security.Claims
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "My Profile";
}

<h2>Your Profile: @User.Identity.GetUserName()</h2>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Claim Type</th>
                    <th>Claim Value</th></>
            </thead>
            <tbody>
                @foreach (var claim in ClaimsPrincipal.Current.Claims.OrderBy(c => c.Type))
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td class="long">@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
