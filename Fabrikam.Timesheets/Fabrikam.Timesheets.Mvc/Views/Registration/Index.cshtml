@model Fabrikam.Timesheets.Mvc.Models.RegistrationModel

@using (Html.BeginForm("Start", "Registration"))
{
    @Html.AntiForgeryToken()


    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(model => model.EnableForMyOrganization, new {id = "organization_enabled"})
            Enable for my organization
        </label>
    </div>
    <div class="form-group" id="organization_name">
        @Html.LabelFor(model => model.OrganizationName)
        @Html.TextBoxFor(model => model.OrganizationName, new { @class = "form-control" })
    </div>
    <input type="submit" value="Register" class="btn btn-default" />
}
